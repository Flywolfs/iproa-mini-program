/* pages/apply/apply.wxss */
/* *attention.wxss* */
@import "../page.wxss";

.wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%
}

.main{
  width: 100%;
}

.title{ 
  display: flex;
  flex-direction: column;
  height: 10%;
  background-color: rgba(255, 255, 255, 0);
  text-align: center;
} 

.titleItem{
  flex-grow: 1;
  color: white;
  font-weight: 500;
  font-size: x-large;
}

.table{
  height: 50%;
  background-color: white;
  top: 50rpx;
  display: flex;
  flex-direction: column;
} 

.attention{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  background-color: white;
  color: rgb(187, 99, 99);
  text-align: center;
  font-size: small;
}

.at_cell{
  width: 50%;
  margin: 2%,5%,0;
}

.trh{
  display: flex;
  flex-direction: row;
  width: 85%;
  justify-content: center;
  height: 3.5rem;
  align-items: center;
  background-color:white;
  align-self: center;
}

.tdh{
    display: flex;
    width:50%;
    height: 100%;
    justify-content: center;
    text-align: center;
    background-color: rgb(238, 246, 254);
    border:1rpx solid rgb(209, 207, 207);
    color:rgb(99, 165, 242);
    font-size: small;
}

.trb{
  display: flex;
  flex-direction: row;
  width: 85%;
  justify-content: center;
  height:3rem;
  align-items: center;
  background-color: white;
  align-self: center
}

.tdb{
    width:50%;
    height: 100%;
    align-items:center;
    text-align: center;
    background-color:white;
    border:1rpx solid rgb(209, 207, 207);
    font-size: small;
}

.selections{
  display: flex;
  flex-direction: column;
  width: 85%;
  height: 6rem;
  align-self: center;
}

.selection_button{
  height: 50%;
  width: 100%;
  display: flex;
  align-items: center;
}

radio .wx-radio-input{ 
    height: 36rpx; 
    width: 36rpx;
    border-radius: 50%;
    border-color: rgb(96, 147, 245);
    background: transparent;
 }

 /* 选中后的 背景样式 */
radio .wx-radio-input.wx-radio-input-checked{
   border-color:rgb(99, 165, 242);
   background-color: white
}
/* 选中后的 对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 30rpx; 
   height: 30rpx;
   line-height: 36rpx;
   text-align: center;
   font-size:0rpx; 
   background-color:rgb(99, 165, 242);
}

.selection_words{
  width: 80%;
}

.apply{
  display: flex;
  height: 40%;
  flex-direction: column;
  background-color:white;
  align-items:center;
  /* text-align: center; */
  /* top: 50rpx; */
}

.button{
  background-color: rgb(99, 165, 242);
  width: 80%;
  color: white;
  top: 30rpx;
}