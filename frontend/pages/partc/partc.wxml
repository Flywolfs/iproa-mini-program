<!--pages/partc/partc.wxml-->
<view class="wrapper"> 
        <view class="main progess">
                <progress percent="64" stroke-width="12"/>
        </view>
        <view class="main title">
                <text>PartC 工作历史</text>
        </view>
        <view class="main add_del">
                <view class="add_del_button" bindtap="insert">增加</view>
                <view class="add_del_button" bindtap="delBind">删除</view>
        </view>
        
        <view class="main title"> 
                <view class="table_tr">
                        <view class="tr_key" >总工作年期</view>
                        <view class="tr_value">
                                <view class="select_box">
                                        <view class="select" catchtap='selectTap'>
                                                <text class="select_text">{{selectData[index]}}</text>
                                                <image class='select_img {{selectShow&&"select_img_rotate"}}'  src="/images/parta/down.png" ></image>
                                        </view>
                                        <view class='option_box' style='height:{{selectShow?(selectData.length>5?325:selectData.length*50):0}}rpx;'>
                                                <text class='option' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
                                        </view>
                                </view>
                        </view>
                </view>
        </view>
        <form class="main table" bindsubmit="next">
                <view wx:for="{{selected_values.records}}" class="working_block">
                        <view class="table_tr">
                                <view class="tr_key">工作开始日期</view>
                                <view class="tr_value">
                                        <view class="ssblock"><input class="write"  placeholder="年" name="start_year{{index}}" value="{{item.start_year}}"></input> </view>
                                        <view class="ssblock"><input class="write"  placeholder="月" name="start_month{{index}}" value="{{item.start_month}}"></input> </view>
                                        <view class="ssblock"><input class="write"  placeholder="日" name="start_day{{index}}" value="{{item.start_day}}"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                <view class="tr_key">工作结束日期</view>
                                <view class="tr_value">
                                        <view class="ssblock"><input class="write"  placeholder="年" name="end_year{{index}}" value="{{item.end_year}}"></input> </view>
                                        <view class="ssblock"><input class="write"  placeholder="月" name="end_month{{index}}" value="{{item.end_month}}"></input> </view>
                                        <view class="ssblock"><input class="write"  placeholder="日" name="end_day{{index}}" value="{{item.end_day}}"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                <view class="tr_key">公司名称</view>
                                <view class="tr_value">
                                        <view class="lblock"><input class="write"  placeholder="公司名称" name="company{{index}}" value="{{item.company}}"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                <view class="tr_key">职位</view>
                                <view class="tr_value">
                                        <view class="lblock"><input class="write"  placeholder="职位" name="occupation{{index}}" value="{{item.occupation}}"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                <view class="tr_key">主要职责</view>
                                <view class="tr_value">
                                        <view class="lblock"><input class="write"  placeholder="主要职责" name="role{{index}}" value="{{item.role}}"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                 <button>上传工作证明</button>
                        </view>
                </view>
                <view class="main buttons">
                        <button type="primary" bindtap="previous">上一步</button>
                        <button type="primary" form-type="submit">下一步</button>
                </view>
        </form>
</view> 
 