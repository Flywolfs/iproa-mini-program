  font-size: small
}

.mblock{
  width: 48%;
  height: 80%;
  border-radius: 8rpx;
  border: 1rpx solid rgb(234, 234, 234);
  margin-right: 2%;
  font-size: small
}

.sblock{
  width:32%;
  height: 80%;
  border-radius: 8rpx;
  border: 1rpx solid rgb(234, 234, 234); 
  margin-right: 2%;
  font-size: small
}

.lblock{
  width: 75%;
  height: 80%;
  border-radius: 8rpx;
