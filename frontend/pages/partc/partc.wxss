  font-size: small
}

.xlblock{
  width: 100%;
  height: 80%;
   border-radius: 8rpx;
   border: 1rpx solid rgb(234, 234, 234);
   font-size: small
}

.select_box{
  width: 90%;
  border-radius: 5rpx;
  position: relative;
  z-index: 99;
}

.select{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  border-radius: 8rpx;
  align-items: center;
  border: 1rpx solid rgb(234, 234, 234);
}

.select_text{
  font-size: small;
  color: rgb(128,128,128);
  width: 85%;
  border-width: 2rpx;
  border-color: rgb(234, 234, 234);
}

.select_img{
  width: 70rpx;
  height: 70rpx;
  display: block;
  transition:transform 0.3s;
}

.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}

.select_box .option_box{
  position: absolute;
  top: calc(100% - 1px);
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
}

.select_box .option_box .option{
  display: block;
  line-height: 30rpx; 
  font-size: 35rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.button_area{
  height: 300rpx;
  background-color:white;
  text-align: center;
  display: flex;
  flex-direction: row;
}

.md_button{
  background-color: rgb(99, 165, 242);
  width: 30%;
  height: 30%;
  color: white;
  top: 30rpx;
  font-size: medium;
}