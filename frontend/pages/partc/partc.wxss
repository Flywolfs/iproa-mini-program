@import "add_del.wxss";
@import "../page.wxss";
.main{
  width: 800rpx;
}

.wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%
}

.progress{
  height: 100rpx;
  background-color:white;
  text-align: center;
}

.head{
  width: 100%;
  height: 5%;
  color: rgba(255, 255, 255, 0);
}

.add_del{
  background-color:white;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink: 0;
  border-bottom: 5rpx solid rgb(234, 234, 234);
}

.add_del_area{
  display: flex;
  width: 45%;
  height: 100%;
  margin: 2.5%;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}

.add_del_desc{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70%;
  font-size: small
}

.add_del_button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%
}

.title{
  display: flex;
  flex-direction: column;
  height: 8%;
  background-color: rgba(255, 255, 255, 0);
  text-align: center;
  color: rgb(255, 255, 255);
  font-weight: 500;
  font-size: large;
  align-content: center;
  justify-content: center;
} 

.table{
  background-color:white;
  text-align: center;
  height:2500rpx;
}

.working_years{
  background-color:white;
  text-align: center;
  height: 100rpx;
}

.working_block{
  background-color:rgb(255, 255, 255);
  height: 600rpx;
  width: 90%;
  margin: 5% 5%;
  border-bottom: 5rpx solid rgb(234, 234, 234);
}

.table_tr{
  display: flex;
  flex-direction: row;
  height: 100rpx;
}

.tr_key{
 width: 35%;
 text-align: left;
 margin: 0 0 0 5%;
 display: flex;
 align-items: center;
 justify-content: left;
 font-size: small;
}

.tr_value{
  width: 55%;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}

.write{
  width: 100%;
  height: 100%
}

.picture{
  display: flex;
  background-color: rgb(239,247,253);
  align-items: center;
  justify-content: center;
}

.ssblock{
  width:23%;
  height: 80%;
  border-radius: 8rpx;
  border: 1rpx solid rgb(234, 234, 234);
