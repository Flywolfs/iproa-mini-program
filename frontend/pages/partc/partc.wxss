  border-bottom: 5rpx solid rgb(234, 234, 234);
}

.add_del_area{
  display: flex;
  width: 45%;
  height: 100%;
  margin: 2.5%;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}

.add_del_desc{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70%;
  font-size: small
}

.add_del_button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%
}

.c_title{
  color: rgb(255, 255, 255);
