<!--pages/partc/partc.wxml-->
<view class="wrapper"> 
        <view class="main progess">
                <progress percent="64" stroke-width="12"/>
        </view>
        <view class="main title">
                <text>PartC 工作历史</text>
        </view>
        <view class="main add_del">
                <view class="add_del_button" bindtap="insert">增加</view>
                <view class="add_del_button" bindtap="delBind">删除</view>
        </view>
        <view class="main title">
                <view class="table_tr">
                        <view class="tr_key" >{{table_values[0].name}}</view>
                        <view class="tr_value">
                                <view class="select_box">
                                        <view class="select" catchtap='selectTap'>
                                                <text class="select_text">{{selectData[index]}}</text>
                                                <image class='select_img {{selectShow&&"select_img_rotate"}}'  src="/images/parta/down.png" ></image>
                                        </view>
                                        <view class='option_box' style='height:{{selectShow?(selectData.length>5?325:selectData.length*50):0}}rpx;'>
                                                <text class='option' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
                                        </view>
                                </view>
                        </view>
                </view>
        </view>
        <view class="main table">
                <view wx:for="{{records}}" class="working_block">
                        <view class="table_tr">
                                <view class="tr_key">{{table_values[1].name}}</view>
                                <view class="tr_value">
                                        <view class="ssblock"><input class="write"  placeholder="开始时间"></input> </view>
                                        To
                                        <view class="ssblock"><input class="write"  placeholder="结束时间"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                <view class="tr_key">{{table_values[2].name}}</view>
                                <view class="tr_value">
                                        <view class="lblock"><input class="write"  placeholder="公司名称"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                <view class="tr_key">{{table_values[3].name}}</view>
                                <view class="tr_value">
                                        <view class="lblock"><input class="write"  placeholder="职位"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                <view class="tr_key">{{table_values[4].name}}</view>
                                <view class="tr_value">
                                        <view class="lblock"><input class="write"  placeholder="主要职责"></input> </view>
                                </view>
                        </view>
                        <view class="table_tr">
                                 <button>上传工作证明</button>
                        </view>
                </view>
        </view>
        <view class="main buttons">
                <button type="primary" bindtap="previous">上一步</button>
                <button type="primary" bindtap="next">下一步</button>
        </view>
</view> 
 